<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Producto."
            tools:layout_editor_absoluteX="21dp"
            tools:layout_editor_absoluteY="82dp" />

        <EditText
            android:id="@+id/NombreProd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ejemplo: Zapatos Nike."
            android:inputType="text"
            android:singleLine="false"
            tools:layout_editor_absoluteX="21dp"
            tools:layout_editor_absoluteY="111dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripcion del producto."
            tools:layout_editor_absoluteX="21dp"
            tools:layout_editor_absoluteY="167dp" />

        <EditText
            android:id="@+id/Descripcion"
            android:layout_width="361dp"
            android:layout_height="122dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Ejemplo: Tenis Nike edicion Challenger, colores azul con rojo."
            android:inputType="text|textMultiLine"
            android:maxLines="6"
            android:minLines="3"
            android:padding="5px"
            android:paddingStart="5px"
            android:paddingLeft="5px"
            android:paddingTop="5px"
            android:paddingEnd="5px"
            android:paddingRight="5px"
            android:paddingBottom="5px"
            android:scrollbars="vertical"
            tools:layout_editor_absoluteX="21dp"
            tools:layout_editor_absoluteY="202dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categoria."
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="515dp" />

        <Spinner
            android:id="@+id/Categoria"
            android:layout_width="300dp"
            android:layout_height="20dp"
            app:barrierMargin="3px"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="544dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio producto sin IVA."
            tools:layout_editor_absoluteX="22dp"
            tools:layout_editor_absoluteY="334dp" />

        <EditText
            android:id="@+id/Precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ejemplo: 300.00"
            android:inputType="numberDecimal"
            tools:layout_editor_absoluteX="21dp"
            tools:layout_editor_absoluteY="373dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cantidad de stock."
            tools:layout_editor_absoluteX="23dp"
            tools:layout_editor_absoluteY="429dp" />

        <EditText
            android:id="@+id/Sotck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ejemplo: 50"
            android:inputType="number"
            tools:layout_editor_absoluteX="23dp"
            tools:layout_editor_absoluteY="456dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cargar imagen."
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="583dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="346dp"
            android:layout_height="261dp"
            app:srcCompat="@android:drawable/ic_menu_camera"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="616dp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>